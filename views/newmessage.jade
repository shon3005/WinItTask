extends layout

block content
    h1= title
    form#formAddUser(name="addmessage",method="post",action="/addmessage")
        div(class="form-group", style="height: 200px;")
            h6 Enter your US cellphone number (no spaces, no country code)
            input#inputUserNumber(class="form-control w-25 h-25", type="text", placeholder="phone number", name="usernumber")
            h6 Enter your text message
            input#inputUserMessage(class="h-100 w-50 form-control", type="text", placeholder="message", name="usermessage")
            button#btnSubmit(type="submit", class="btn btn-primary") submit
